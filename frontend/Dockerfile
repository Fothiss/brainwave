FROM node:18-alpine AS builder
WORKDIR /app
COPY fort/package*.json ./
RUN npm install
COPY fort/ .
RUN npm run build

FROM node:18-alpine
WORKDIR /app
COPY --from=builder /app/package*.json ./
COPY --from=builder /app/.next ./.next
COPY --from=builder /app/public ./public
RUN npm install --production
EXPOSE 3000
CMD ["npm", "start"]
